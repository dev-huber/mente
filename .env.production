# PRODUCTION ENVIRONMENT VARIABLES
# ATENÇÃO: Não commitar com valores reais - usar Azure Key Vault em produção

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=stquemmentemenosprod;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net
AZURE_SPEECH_KEY=YOUR_SPEECH_KEY
AZURE_SPEECH_REGION=brazilsouth
AZURE_TEXT_ANALYTICS_KEY=YOUR_TEXT_ANALYTICS_KEY
AZURE_TEXT_ANALYTICS_ENDPOINT=https://ta-quem-mente-menos-prod.cognitiveservices.azure.com/

# Database
COSMOS_DB_ENDPOINT=https://cosmos-quem-mente-menos-production.documents.azure.com:443/
COSMOS_DB_KEY=YOUR_COSMOS_KEY
COSMOS_DB_DATABASE=quem-mente-menos
REDIS_CONNECTION_STRING=redis-quem-mente-menos-production.redis.cache.windows.net:6380,password=YOUR_PASSWORD,ssl=True,abortConnect=False

# Authentication
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_MIN_32_CHARS_PRODUCTION
JWT_REFRESH_SECRET=YOUR_SUPER_SECRET_REFRESH_KEY_MIN_32_CHARS_PRODUCTION

# Application
NODE_ENV=production
APP_VERSION=1.0.0
PORT=443
AUDIO_CONTAINER_NAME=audio-uploads

# Monitoring
APPINSIGHTS_INSTRUMENTATIONKEY=YOUR_APP_INSIGHTS_KEY
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
